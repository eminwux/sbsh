    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug sbsh",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/sbsh/",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug sbsh run",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/sbsh",
            "console": "integratedTerminal",
            "args": [
                "run"
            ]
        },
        {
            "name": "Debug Tests in cmd/sbsh run",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/cmd/sbsh", // or ./pkg/session if you want that package
            "console": "integratedTerminal",
            "args": [
                "run -test.v" // show each test function executed
            ]
        },
        {
            "name": "Debug Tests in pkg/session",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/session", // or ./pkg/session if you want that package
            "console": "integratedTerminal",
            "args": [
                "-test.v" // show each test function executed
            ]
        },
        {
            "name": "Debug Tests in cmd/sbsh",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/cmd/sbsh", // or ./pkg/session if you want that package
            "console": "integratedTerminal",
            "args": [
                "-test.v" // show each test function executed
            ]
        },
        {
            "name": "Debug Tests in pkg/supervisor",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/supervisor", // or ./pkg/session if you want that package
            "console": "integratedTerminal",
            "args": [
                "-test.v" // show each test function executed
            ]
        }  
    ]
}